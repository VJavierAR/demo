    <record id="helpdesk.helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            
          <form string="Helpdesk Ticket">
              <header>
                  <field name="is_self_assigned" invisible="1"/>
                  <button name="assign_ticket_to_self" string="Assign To Me" type="object" class="oe_highlight" groups="helpdesk.group_helpdesk_user" attrs="{'invisible': [('is_self_assigned', '=', True)]}"/>
                  <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
              </header>
              <sheet>
                  <field name="legend_blocked" invisible="1"/>
                  <field name="legend_normal" invisible="1"/>
                  <field name="legend_done" invisible="1"/>
                  <field name="partner_ticket_count" invisible="1"/>
                  <div class="oe_button_box" name="button_box">
                      <button name="action_get_attachment_tree_view" class="oe_stat_button" icon="fa-book" type="object" attrs="{'invisible':  [('attachment_number', '=', 0)]}">
                          <field name="attachment_number" widget="statinfo" string="Documents"/>
                      </button>
                  </div>
                  <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                  <field name="kanban_state" widget="state_selection"/>
                  <div class="oe_title">
                      <h1><field name="name" class="field_name" placeholder="Subject..."/></h1>
                      <field name="sla_status_ids" widget="many2many_tags" options="{'color_field': 'color'}" readonly="1" groups="helpdesk.group_use_sla"/>
                  </div>
                  <group>
                      <group>
                          <field name="active" invisible="1"/>
                          <field name="team_id"/>
                          <field name="user_id" class="field_user_id" domain="['&amp;', ('id', 'in', domain_user_ids), ('share', '=', False)]" widget="many2one_avatar_user"/>
                          <field name="domain_user_ids" invisible="1"/>
                          <field name="ticket_type_id"/>
                          <field name="priority" widget="priority"/>
                          <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                          <field name="company_id" groups="base.group_multi_company"/>
                          <field name="sla_deadline" attrs="{'invisible': [('sla_deadline', '=', False)]}" groups="helpdesk.group_use_sla"/>
                      </group>
                      <group>
                          <field name="partner_id" class="field_partner_id" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]" widget="res_partner_many2one"/>
                          <field name="partner_name" attrs="{'invisible': [('partner_id', '!=', False)]}"/>
                          <field name="partner_email"/>
                          <field name="email_cc" groups="base.group_no_one"/>
                      </group>
                  </group>
                  <field name="description" class="field_description" placeholder="Description of the ticket..."/>
              </sheet>
              <div class="oe_chatter">
                  <field name="message_follower_ids"/>
                  <field name="activity_ids"/>
                  <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
              </div>
              <h2>Hola test</h2>
          </form>

        </field>
    </record>

  </data>
</odoo>